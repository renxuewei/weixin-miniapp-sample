/**app.wxss**/
@import "resources/weui/weui.wxss";

.weui-cell {
    font-size: 24rpx;
    min-height: 60rpx;
    padding: 10rpx 25rpx;
}

.weui-btn {
    font-size: 26rpx;
    padding: 10rpx 10rpx;
}

.weui-form-preview__btn {
    font-size: 26rpx;
}

page {
    background-color: #f8f8f8;
    font-size: 24rpx;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
    padding: 0px;
}

.page__bd {
    padding-bottom: 80px;
}

.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft {
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888;
    text-align: left;
    font-size: 14px;
}

/*页面主操作按钮的主题样式*/

.page-btn-primary {
    background-color: #0cf;
    color: white;
}

/*页面次操作按钮的主题样式*/

.page-btn-default {
    background-color: white;
    color: #0cf;
    border: 1px solid #0cf;
}

/*页面文字的主题样式*/

.page-font-theme {
    color: #0cf;
}

/*页面背景的主题样式*/

.page-bg-theme {
    background-color: #0cf;
}

/*页面底部固定区域的样式*/

.page-footer-fixed {
    position: fixed;
    bottom: 0px;
    right: 0px;
    left: 0px;
    padding-bottom: 10px;
    background-color: white;
}

/*页面行间隔的样式*/

.page-row-spacing {
    border-top: 0px;
    margin-top: 10px;
}

/*TAB页面头部样式*/

.page-tab-head {
    position: fixed;
    background-color: white;
    margin-bottom: 5px;
    z-index: 999;
    width: 100%;
}

/*TAB页面双行头部样式*/

.page-tab-hd__full {
    height: 100px;
}

/*TAB页面单行头部样式*/

.page-tab-hd__single {
    height: 50px;
}

/*TAB页面主体样式*/

.page-tab-body {
    position: absolute;
    width: 100%;
}

/*TAB页面带有双行头部的主体样式*/

.page-tab-bd__full {
    top: 100px;
}

/*TAB页面带有单行头部的主体样式*/

.page-tab-bd__single {
    top: 50px;
}

.tabs {
    height: 40px;
    border-top: 1px solid #0cf;
	border-bottom: 1px solid #0cf;
	border-right: 1px solid #0cf;
	line-height: 40px;
	text-align: center;
	margin-bottom: 10px;
}

.tab-active {
	flex:1;
    color: white;
    background-color: #0cf;
	border-left: 1px solid #0cf;
}

.tab-default {
	flex:1;
    color: #0cf;
    background-color: white;
	border-left: 1px solid #0cf;
}

/*卡片头部样式*/

.card-preview-hd {
    font-size: 14px;
}

/*卡片底部按钮样式*/

.card-preview-btn-area {
    height: 35px;
    line-height: 35px;
    font-size: 14px;
}

/*卡片底部警示按钮样式*/

.card-preview-btn-warn {
    color: red;
}

/*卡片图文的缩略图样式*/

.card-preview-image {
    height: 120rpx;
    width: 120rpx;
    margin-top: 5rpx;
    /*background-color:#f8f8f8;*/
}

/*卡片图文的文字描述样式*/

.card-preivew-desc {
    font-size: 12px;
    line-height: 20px;
}

/*卡片图文的标题文字描述样式*/

.card-preivew-desc-title {
    font-weight: bold;
    font-size: 12px;
    line-height: 24px;
}

/*卡片状态戳样式*/

.card-preview-status-stamp {
    position: absolute;
    right: 20px;
    top: 30px;
    width: 50px;
    height: 50px;
    border: 1px solid orangered;
    border-radius: 50%;
    color: orangered;
    text-align: center;
    line-height: 50px;
    transform: rotate(45deg);
    font-size: 8pt;
}

.card-preview-status-btn {
    position: absolute;
    right: 10px;
    top: 45%;
    border-radius: 3px;
    background-color: white;
    color: #0cf;
    border: 1px solid #0cf;
    padding-left: 10px;
    padding-right: 10px;
}

.card-preview-status-btn2 {
    position: absolute;
    right: 10px;
    top: 60%;
    border-radius: 3px;
    background-color: white;
    color: #0cf;
    border: 1px solid #0cf;
    padding-left: 10px;
    padding-right: 10px;
}

.card-tag {
    float: left;
    color: chocolate;
    border: 1px solid #eee;
    border-radius: 5px;
    font-size: 9pt;
    margin: 2px;
    padding: 0 3px;
}

.text-cell-font {
    font-size: 9pt;
}

.label-nowrap {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.cart-btn {
    position: fixed;
    bottom: 80px;
    right: 20px;
    width: 42px;
    height: 42px;
    line-height: 35px;
    z-index: 999;
    vertical-align: middle;
    text-align: center;
    align-content: center;
    border: 1px solid #0cf;
    border-radius: 50%;
    background-color: white;
}

.cart-btn-image {
    position: absolute;
    left: 8px;
    top: 8px;
    width: 25px;
    height: 25px;
    display: block;
    border-radius: 2px;
}

.cart-badge {
    position: absolute;
    bottom: 25px;
    right: 0px;
    font-size: 10px;
    height: 10px;
    width: 10px;
    border-radius: 50%;
}

.cell-btn-default {
    color: white;
    background-color: gray;
    border-radius: 10rpx;
    padding: 10rpx;
}
