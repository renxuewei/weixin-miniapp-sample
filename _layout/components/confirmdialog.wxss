/* _layout/components/confirmdialog.wxss */
@import '/app.wxss';

.mask_layer {
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

.modal_box {
    width: 100%;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 1001;
    background: #fafafa;
    min-height: 100rpx;
    /* max-height: 80%; */
    /* margin: -150px 12% 0 12%;
    border-radius: 3px; */
}

.title {
    padding: 15px;
    text-align: center;
    background-color: gazure;
}

.content {
	font-size: 10pt;
    max-height: 400px;
    overflow-y: scroll; /*超出父盒子高度可滚动*/
}

